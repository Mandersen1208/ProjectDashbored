# ProjectDashbored - Docker Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ======================
# DATABASE CONFIGURATION
# ======================
DB_USERNAME=admin
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ======================
# ADZUNA API CREDENTIALS
# ======================
# Get your API credentials at: https://developer.adzuna.com/
ADZUNA_API_ID=your_adzuna_api_id
ADZUNA_API_KEY=your_adzuna_api_key
ADZUNA_BASE_URL=https://api.adzuna.com/v1/api/jobs/us/search/1

# ======================
# JWT CONFIGURATION
# ======================
# Generate a secure secret with: openssl rand -base64 64
JWT_SECRET=your_generated_jwt_secret_here
JWT_EXPIRATION_MS=86400000

# ======================
# EMAIL CONFIGURATION (OPTIONAL)
# ======================
# Set to true to enable email notifications
EMAIL_ENABLED=false

# SMTP Settings (Gmail example)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Email From Address
EMAIL_FROM=noreply@jobhunter.com

# ======================
# APPLICATION SETTINGS
# ======================
# Set to false in production to reduce log verbosity
SHOW_SQL=false
